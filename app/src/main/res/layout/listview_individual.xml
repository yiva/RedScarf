<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@color/white"
    android:orientation="vertical" 
    android:descendantFocusability="blocksDescendants">
    
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_individual_product"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"/>

    <TextView 
	    android:id="@+id/content_individual"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:textSize="15sp"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    >
	    <ImageView 
	        android:layout_width="25dp"
	        android:layout_height="15dp"
	        android:background="@drawable/arrow_red"/>
	    <TextView 
	        android:id="@+id/location_content_individual"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:textSize="20sp"
	        android:textColor="@color/customappred"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/darkgray"/>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:orientation="horizontal"
	    >
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:orientation="horizontal">
	        <ImageView 
	            android:layout_width="15dp"
	            android:layout_height="15dp"
	            android:background="@drawable/discuss_grey"
	            />
	        <TextView 
	            android:id="@+id/discuss_individual"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dp"
	            android:layout_marginStart="4dp"
	            android:textSize="15sp"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:layout_marginTop="4dp"
	        android:layout_marginBottom="4dp"
	        android:background="@color/darkgray"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:orientation="horizontal">
	        <ImageView 
	            android:layout_width="15dp"
	            android:layout_height="15dp"
	            android:background="@drawable/zan_grey"
	            />
	        <TextView 
	            android:id="@+id/zan_individual"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dp"
	            android:layout_marginStart="4dp"
	            android:textSize="15sp"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:layout_marginTop="4dp"
	        android:layout_marginBottom="4dp"
	        android:background="@color/darkgray"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
			android:gravity="center"
			android:orientation="horizontal">
	        <ImageView 
	            android:layout_width="15dp"
	            android:layout_height="15dp"
	            android:background="@drawable/favourite_grey"
	            />
	        <TextView 
	            android:id="@+id/favourite_individual"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dp"
	            android:layout_marginStart="4dp"
	            android:textSize="15sp"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
