<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/shop_detail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
                   <com.android.volley.toolbox.NetworkImageView
                       android:id="@+id/img_photo_food"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center_vertical"
                       android:contentDescription="@string/app_name"
                       android:scaleType="centerCrop" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_alignBottom="@+id/img_photo_food"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            android:alpha="0.5"></View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/txt_title_food"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sys_font_size_bolder"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/txt_subtitle_food"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/white"
                                android:textSize="11dp"
                                android:textStyle="normal"
                                android:lineSpacingMultiplier="1.5"
                                android:maxLines="3"/>
                            <TextView
                                android:id="@+id/txt_style_food"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:textSize="11dp"
                                android:textColor="@color/white"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </FrameLayout>
</RelativeLayout>
