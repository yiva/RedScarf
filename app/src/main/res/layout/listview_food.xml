<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="match_parent"
               android:layout_height="90dp"
               android:paddingLeft="8dp"
               android:paddingStart="8dp"
               android:paddingTop="8dp"
               android:paddingRight="4dp"
               android:paddingEnd="4dp"
               android:layout_marginBottom="8dp"
               android:descendantFocusability="blocksDescendants">
                   <com.android.volley.toolbox.NetworkImageView
                       android:id="@+id/img_photo_food"
                       android:layout_width="100dp"
                       android:layout_height="80dp"
                       android:layout_gravity="center_vertical"
                       android:contentDescription="@string/app_name"
                       android:scaleType="centerCrop" />

                   <LinearLayout
                       android:layout_width="200dp"
                       android:layout_height="80dp"
                       android:layout_marginLeft="105dp"
                       android:layout_marginStart="105dp"
                       android:layout_gravity="center_vertical"
                       android:orientation="vertical">
                       <LinearLayout 
                           android:layout_width="match_parent"
                           android:layout_height="20dp"
                           android:orientation="horizontal">
                           <ImageView 
        	                android:id="@+id/img_ad_food"
        	                android:layout_width="20dp"
        	                android:layout_height="12dp"
        	                android:layout_marginLeft="4dp"
        	                android:background="@drawable/ad"
        	                android:visibility="gone"/>
        	            <TextView 
        	                android:id="@+id/txt_ad_food"
        	                android:layout_width="wrap_content"
        	                android:layout_height="wrap_content"
        	                android:layout_marginLeft="4dp"
        	                android:textSize="13sp"
        	                android:textColor="@color/red"
        	                android:visibility="gone"/>
                       <TextView
                           android:id="@+id/txt_title_food"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textSize="13dp"
                           android:textStyle="bold" />
                       </LinearLayout>
                       
                       <LinearLayout 
                           android:layout_marginTop="4dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <ImageView 
                               android:id="@+id/img_star_food"
                               android:layout_width="70dp"
                               android:layout_height="12dp"/>
                           <TextView
                               android:id="@+id/txt_review_food"
	                           android:layout_width="match_parent"
	                           android:layout_height="wrap_content"
	                           android:layout_marginLeft="8dp"
	                           android:layout_marginStart="8dp"
	                           android:textSize="11dp"
	                           android:textColor="#AAAAAA"
	                           android:textStyle="normal" />
                       </LinearLayout>
                       <TextView
                           android:id="@+id/txt_subtitle_food"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textSize="11dp"
                           android:textStyle="normal"
                           android:maxLines="2"/>
                       <TextView
                           android:id="@+id/txt_style_food"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textSize="11dp"
                           android:textColor="#AAAAAA"
                           android:textStyle="normal" />
                   </LinearLayout>
</RelativeLayout>
