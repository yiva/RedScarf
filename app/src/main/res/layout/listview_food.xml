<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/shop_detail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
                   <com.android.volley.toolbox.NetworkImageView
                       android:id="@+id/img_photo_food"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center_vertical"
                       android:contentDescription="@string/app_name"
                       android:scaleType="centerCrop" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_alignBottom="@+id/img_photo_food"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            android:alpha="0.5"></View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/txt_title_food"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sys_font_size_bolder"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/txt_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/layout_margin3"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sys_font_size_normal"/>
                            </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/ico_subtitle_food"
                                android:layout_width="16dp"
                                android:layout_height="12dp"
                                android:layout_centerVertical="true"
                                android:background="@drawable/underground_w"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="@dimen/layout_margin3"
                                />
                            <TextView
                                android:id="@+id/txt_subtitle_food"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/ico_subtitle_food"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sys_font_size_normal"
                                android:textStyle="normal"
                                android:lineSpacingMultiplier="1.5"
                                android:maxLines="3"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            >
                            <TextView
                                android:id="@+id/txt_style_food"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_alignParentLeft="true"
                                android:textSize="@dimen/sys_font_size_normal"
                                android:textColor="@color/white"
                                android:textStyle="normal" />
                            <LinearLayout
                                android:id="@+id/label_michelin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/layout_margin3"
                                android:orientation="horizontal"
                                android:layout_toRightOf="@+id/txt_style_food"
                                android:gravity="center_vertical"
                                android:visibility="gone"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sys_font_size_normal"
                                    android:textColor="@color/white"
                                    android:text="@string/txt_michelin"/>
                                <ImageView
                                    android:id="@+id/ico_michelin_1"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/michelin_w"
                                    android:visibility="gone"/>
                                <ImageView
                                    android:id="@+id/ico_michelin_2"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/michelin_w"
                                    android:visibility="gone"/>
                                <ImageView
                                    android:id="@+id/ico_michelin_3"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/michelin_w"
                                    android:visibility="gone"/>

                            </LinearLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/layout_margin3"
                                android:layout_alignParentRight="true"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/price_4"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sys_font_size_normal"
                                    android:alpha="0.4"
                                    />
                                <TextView
                                    android:id="@+id/txt_food_cost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sys_font_size_normal"
                                    android:textColor="@color/white"
                                    />
                            </RelativeLayout>

                        </RelativeLayout>
                        </LinearLayout>
                    </FrameLayout>
</RelativeLayout>
