<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		>
		<include
			android:id="@+id/actionbar_food"
			layout="@layout/actionbar_normal"
			/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="@color/weidou_purple"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:descendantFocusability="blocksDescendants"
			>
			<com.redscarf.weidou.customwidget.HorizontalListView
				android:id="@+id/list_food_select"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:paddingTop="8dp"
				>
			</com.redscarf.weidou.customwidget.HorizontalListView>
		</LinearLayout>
		<RelativeLayout
			android:id="@+id/layout_search_food"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="@color/shallow_purple"
			android:padding="@dimen/layout_padding3"
			android:gravity="center"
			>
			<View
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/corners_bg_white"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="@dimen/layout_padding4"
				android:orientation="horizontal"
				android:gravity="center"
				>
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:src="@drawable/ic_search_black"/>
				<TextView
					style="@style/text_style_bolder"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/action_search"
					android:textColor="@color/shallow_purple"
					android:layout_marginLeft="@dimen/layout_margin3_minus"
					/>
			</LinearLayout>
		</RelativeLayout>
		<com.redscarf.weidou.customwidget.pullableview.PullToRefreshLayout
			android:id="@+id/food_refresh_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			>

			<include layout="@layout/refresh_head" />
			<!-- 支持所有实现Pullable接口的View -->

			<com.redscarf.weidou.customwidget.pullableview.PullableListView
				android:id="@+id/list_food"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				></com.redscarf.weidou.customwidget.pullableview.PullableListView>

			<include layout="@layout/load_more"/>
		</com.redscarf.weidou.customwidget.pullableview.PullToRefreshLayout>
	</LinearLayout>
</RelativeLayout>
