<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include 
	    android:id="@+id/actionbar_whose_share"
	    layout="@layout/actionbar_whose_share"
	    />
<ScrollView
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:fillViewport="true"
        	android:scrollbars="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_whose_share_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/img_whose_share_logo"
            android:layout_toEndOf="@+id/img_whose_share_logo"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            >
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView 
                android:id="@+id/txt_whose_share_name"
                android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="8dp"
		        android:layout_marginStart="8dp"
		        android:textSize="12sp"/>
                <LinearLayout
                    android:layout_alignParentBottom="true"
				    android:layout_marginTop="4dp"
				    android:layout_width="match_parent"
				    android:layout_height="20dp"
				    android:orientation="horizontal" 
				    android:layout_gravity="bottom">
				    <com.android.volley.toolbox.NetworkImageView
				        android:layout_width="15dp"
				        android:layout_height="20dp"
				        android:background="@drawable/location_grey" />
				    <TextView 
				        android:id="@+id/txt_location_whose_share"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="8dp"
				        android:layout_marginStart="8dp"
				        android:textSize="10sp"/>
				</LinearLayout>
            </RelativeLayout>
				<RelativeLayout 
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_weight="1">
				        <Button
				            android:id="@+id/btn_attention_whose_share"
					        android:layout_width="60dp"
					        android:layout_height="20dp"
					        android:background="@drawable/red_frame"
					        android:layout_alignParentRight="true"
					        android:layout_alignParentEnd="true"
					        android:layout_centerVertical="true"
					        android:textColor="@color/customappred"
					        android:textSize="10sp"
					        android:text="@string/txt_tab_attention_plus"
				        />
				    </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    
    <com.android.volley.toolbox.NetworkImageView
        android:layout_marginTop="50dp"
        android:id="@+id/img_whose_share_photo"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>
    <TextView 
        android:id="@+id/txt_whose_share_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        />
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    >
	    <ImageView 
	        android:layout_width="25dp"
	        android:layout_height="15dp"
	        android:background="@drawable/arrow_red"/>
	    <TextView 
	        android:id="@+id/location_content_whose_share"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:textSize="20sp"
	        android:textColor="@color/customappred"/>
	</LinearLayout>
	<View 
	    android:layout_marginTop="8dp"
       	android:layout_width="match_parent"
       	android:layout_height="1dp"
       	android:background="@color/darkgray"/>
	<TextView 
	    android:layout_marginTop="8dp"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:textSize="16dp"/>
	    
    
</LinearLayout>
</ScrollView>

</LinearLayout>