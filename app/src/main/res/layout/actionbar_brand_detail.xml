<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="63.0dp"
    android:id="@+id/actionbarBrandDetail"
    android:background="@color/customappred"
    android:layout_gravity="center_horizontal">
    <ImageButton
        android:id="@+id/btn_brand_detail_back"
        android:layout_marginLeft="12.0dp"
        android:layout_marginTop="12.0dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_back"
        android:contentDescription="@string/app_name"
        android:onClick="onBackClick"
        />

    <TextView
        android:id="@+id/txt_brand_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/btn_brand_detail_share"
        android:layout_marginTop="12.0dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_share"
        android:contentDescription="@string/app_name"
        android:layout_toLeftOf="@+id/btn_brand_detail_like"
        android:layout_marginRight="@dimen/layout_margin3"
        />
    <ImageButton
        android:id="@+id/btn_brand_detail_like"
        android:layout_marginTop="12.0dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_favourite_white"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="@dimen/layout_margin2"
        />
    
</RelativeLayout>