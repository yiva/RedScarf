<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--<include-->
        <!--android:id="@+id/actionbar_food_category"-->
        <!--layout="@layout/actionbar_normal" />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dimgray"
        android:alpha="0.5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/layout_margin1"
        android:background="@color/white">
        <GridView
            android:id="@+id/grid_food"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:gravity="center"
            android:horizontalSpacing="@dimen/layout_margin3"
            android:verticalSpacing="@dimen/layout_margin3"
            android:stretchMode="columnWidth"
            android:padding="@dimen/sys_padding"
            android:background="@color/white"
            android:layout_above="@+id/btn_food_category_dismiss"
            />
        <Button
            android:id="@+id/btn_food_category_dismiss"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/dismiss"
            android:textColor="@color/white"
            android:textSize="@dimen/sys_font_size_bolder"
            android:background="@color/weidou_purple"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</RelativeLayout>