<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <ImageView 
            android:id="@+id/img_individual_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img_individual_logo"
            android:layout_toEndOf="@+id/img_individual_logo"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView 
                    android:id="@+id/txt_nickname_individual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
                <ImageView 
                    android:id="@+id/ico_gender_individual"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
			    android:layout_width="match_parent"
			    android:layout_height="30dp"
			    android:orientation="horizontal"
			    >
                 <View 
			        android:layout_width="1dp"
			        android:layout_height="match_parent"
			        android:background="@color/darkgray"/>
				    <LinearLayout 
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_weight="1"
				        android:gravity="center"
				        android:orientation="vertical">
				        <TextView 
				            android:id="@+id/txt_count_attention_individual"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textColor="@color/darkgray"
				            android:textSize="10sp"
				            />
				        <TextView 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textSize="10sp"
				            android:textColor="@color/darkgray"
				            android:text="@string/txt_tab_attention"
				            />
				    </LinearLayout>
				    <View 
				        android:layout_width="1dp"
				        android:layout_height="match_parent"
				        android:background="@color/darkgray"/>
				    <LinearLayout 
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_weight="1"
				        android:gravity="center"
				        android:orientation="vertical">
				        <TextView 
				            android:id="@+id/txt_count_fans_individual"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textColor="@color/darkgray"
				            android:textSize="10sp"
				            />
				        <TextView 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textSize="10sp"
				            android:textColor="@color/darkgray"
				            android:text="@string/txt_tab_fans"/>
				    </LinearLayout>
				    <View 
				        android:layout_width="1dp"
				        android:layout_height="match_parent"
				        android:background="@color/darkgray"/>
				    <LinearLayout 
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical">
				        <TextView 
				            android:id="@+id/txt_count_share_individual"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textColor="@color/darkgray"
				            android:textSize="10sp"
				            />
				        <TextView 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textSize="10sp"
				            android:textColor="@color/darkgray"
				            android:text="@string/txt_tab_share"/>
				    </LinearLayout>
				     <View 
				        android:layout_width="1dp"
				        android:layout_height="match_parent"
				        android:background="@color/darkgray"/>
				</LinearLayout>

				<LinearLayout
				    android:layout_marginTop="4dp"
				    android:layout_width="match_parent"
				    android:layout_height="20dp"
				    android:gravity="center_vertical"
				    android:orientation="horizontal" >
				    <ImageView
				        android:layout_width="15dp"
				        android:layout_height="20dp"
				        android:background="@drawable/location_red" />
				    <TextView 
				        android:id="@+id/txt_location_individual"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="8dp"
				        android:layout_marginStart="8dp"
				        android:textSize="10sp"/>
				    <RelativeLayout 
				        android:layout_width="match_parent"
				        android:layout_height="match_parent">
				        <Button
				            android:id="@+id/btn_share_invididual"
					        android:layout_width="80dp"
					        android:layout_height="20dp"
					        android:background="@drawable/red_frame"
					        android:layout_alignParentRight="true"
					        android:layout_alignParentEnd="true"
					        android:textColor="@color/customappred"
					        android:textSize="10sp"
					        android:text="@string/txt_tab_attention_plus"
				        />
				    </RelativeLayout>
				</LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView 
        android:id="@+id/txt_info_individual"
        android:tag="info_individual"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="10dp"
        />
	<ListView 
	    android:id="@+id/list_individual"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    ></ListView>
</LinearLayout>
