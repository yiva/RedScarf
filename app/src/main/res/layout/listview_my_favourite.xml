<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                 android:id="@+id/shop_detail_info"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:descendantFocusability="blocksDescendants">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_my_favourite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/img_my_favourite"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:alpha="0.4"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/txt_title_my_favourite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sys_font_size_bolder"
                />
            <TextView
                android:id="@+id/txt_content_my_favourite"
                android:textColor="@color/white"
                android:textSize="@dimen/sys_font_size_bolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                />
            <LinearLayout
                android:id="@+id/layout_expires_my_favourite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginTop="@dimen/layout_margin3"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/watch_red"
                    />
                <TextView
                    android:id="@+id/txt_time_my_favourite"
                    style="@style/text_style_content_normal"
                    android:layout_marginLeft="@dimen/layout_margin3"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
