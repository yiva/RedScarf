<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:paddingLeft="@dimen/layout_padding2"
        android:paddingRight="@dimen/layout_padding2"
        android:paddingTop="@dimen/layout_padding3"
        android:paddingBottom="@dimen/layout_padding3"
        >
        <!--<TextView-->
        <!--android:id="@+id/txt_food_detail_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="@dimen/sys_font_size_bolder"-->
        <!--android:textStyle="bold" />-->
        <TextView
            android:id="@+id/txt_food_detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sys_font_size_normal"
            android:textStyle="normal"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/layout_margin3"
            >
            <ImageView
                android:id="@+id/ico_underground_food_detail"
                android:layout_width="@dimen/ico_small"
                android:layout_height="@dimen/ico_small"
                android:src="@drawable/underground"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/txt_food_detail_underground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin3"
                android:layout_toRightOf="@+id/ico_underground_food_detail"
                android:textSize="@dimen/sys_font_size_normal"
                android:textStyle="normal"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:id="@+id/layout_reservation_food_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin2"
                android:layout_toRightOf="@+id/txt_food_detail_underground"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/ico_reservation_food_detail"
                    android:layout_width="@dimen/ico_small"
                    android:layout_height="@dimen/ico_small"
                    android:src="@drawable/reservation"
                    android:scaleType="fitEnd"
                    />
                <TextView
                    android:id="@+id/txt_reservation_food_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sys_font_size_normal"
                    android:layout_marginLeft="@dimen/layout_margin3"
                    android:textStyle="normal"
                    android:text="@string/reservation"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_margin3"
                android:layout_marginEnd="@dimen/layout_margin3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_4"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sys_font_size_normal"
                    android:alpha="0.6"
                    />
                <TextView
                    android:id="@+id/txt_food_detail_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sys_font_size_normal"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin3"
            >
            <TextView
                android:id="@+id/txt_food_detail_subtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sys_font_size_normal"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:textStyle="normal" />
            <LinearLayout
                android:id="@+id/layout_michelin_food_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin1"
                android:layout_toRightOf="@+id/txt_food_detail_subtype"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sys_font_size_normal"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:text="@string/txt_michelin"/>
                <ImageView
                    android:id="@+id/ico_michelin_food_detail_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/michelin"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/ico_michelin_food_detail_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/michelin"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/ico_michelin_food_detail_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/michelin"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_distance_food_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sys_font_size_normal"/>
        </RelativeLayout>


    </GridLayout>
    <TextView
        android:id="@+id/txt_food_detail_website"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/whitesmoke"
        android:paddingLeft="@dimen/layout_padding2"
        android:gravity="center_vertical"
        android:textSize="@dimen/sys_font_size_h2"
        android:textColor="@color/font_bigger"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/txt_food_detail_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/whitesmoke"
        android:paddingLeft="@dimen/layout_padding2"
        android:gravity="center_vertical"
        android:textSize="@dimen/sys_font_size_h2"
        android:textColor="@color/font_bigger"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <TextView
        android:id="@+id/txt_food_detail_view_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/whitesmoke"
        android:paddingLeft="@dimen/layout_padding2"
        android:gravity="center_vertical"
        android:textSize="@dimen/sys_font_size_h2"
        android:textColor="@color/font_bigger"
        />
    <TextView
        style="@style/text_style_content_detail"
        android:id="@+id/txt_food_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin1"
        android:paddingLeft="@dimen/layout_padding2"
        android:paddingRight="@dimen/layout_padding2"
        android:textSize="@dimen/sys_font_size_normal"
        />
    <!-- 餐厅照片 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="@dimen/layout_margin1"
        android:background="#DDDDDD"
        android:orientation="vertical">
        <com.redscarf.weidou.customwidget.HorizontalListView
            android:id="@+id/hlist_food_detail_img"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:focusable="false"
            android:layout_marginTop="8dp">
        </com.redscarf.weidou.customwidget.HorizontalListView>
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:id="@+id/layout_food_detail_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
    </LinearLayout>
</RelativeLayout>