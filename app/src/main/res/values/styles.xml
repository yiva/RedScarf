<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="CustomBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/title</item>
    </style>

    <style name="CustomAppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/CustomBarTheme</item>
        <item name="android:actionBarSize">60dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTextTitle" parent="@style/CustomAppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomLayout" parent="@style/CustomAppTheme">
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomLineStyle" parent="@style/CustomAppTheme">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="PhotoActivityTheme">
        <item name="colorTheme">@color/customappred</item>
        <item name="colorThemeDark">@color/customappred</item>
    </style>

    <style name="index_tab">
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">28dp</item>
        <item name="android:button">@null</item>
    </style>
    <style name="text_style">
        <item name="android:lineSpacingMultiplier">1</item>
    </style>
    <style name="text_style_content_normal" parent="@style/text_style">
        <item name="android:textSize">@dimen/sys_font_size_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_style_content_detail" parent="@style/text_style">
        <item name="android:textSize">@dimen/sys_font_size_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/detail_content</item>
        <item name="android:lineSpacingMultiplier">2</item>
    </style>
    <style name="text_style_individual_info">
        <item name="android:textSize">@dimen/sys_font_size_bolder</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/layout_padding1</item>
        <item name="android:paddingBottom">@dimen/layout_padding1</item>
        <item name="android:layout_marginRight">@dimen/layout_margin1</item>
    </style>


    <!--MineActivity-->
    <style name="table_row_mine" >
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">@dimen/activity_element_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="text_view_mine">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sys_font_size_bolder</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="image_view_mine">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>
    <style name="hr_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/whitesmoke</item>
        <item name="android:layout_marginTop">@dimen/layout_margin3</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin3</item>
        <item name="android:paddingTop">@dimen/layout_padding3</item>
        <item name="android:paddingBottom">@dimen/layout_padding3</item>
    </style>
    <!-- Button Style -->
    <style name="button_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:textColor">@color/customappred</item>
        <item name="android:textSize">@dimen/sys_font_size_h2</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="button_cancel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_cancel</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sys_font_size_h2</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="button_danger">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_submit</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sys_font_size_h2</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="button_3f3d65">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_3f3d65</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sys_font_size_h2</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="button_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sys_font_size_h2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="widget_actionbar">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>
    <style name="listview_with_divider">
        <item name="android:divider">@color/whitesmoke</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:paddingLeft">@dimen/layout_padding3</item>
        <item name="android:paddingRight">@dimen/layout_padding3</item>
    </style>
    <!-- End Button Style -->

</resources>
