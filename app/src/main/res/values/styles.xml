<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="CustomBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/title</item>
    </style>

    <style name="CustomAppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/CustomBarTheme</item>
        <item name="android:actionBarSize">60dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTextTitle" parent="@style/CustomAppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomLayout" parent="@style/CustomAppTheme">
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomLineStyle" parent="@style/CustomAppTheme">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="PhotoActivityTheme">
        <item name="colorTheme">@color/customappred</item>
        <item name="colorThemeDark">@color/customappred</item>
    </style>

    <style name="index_tab">
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_width">30dp</item>
        <!--<item name="android:gravity">center</item>-->
        <!--<item name="android:textSize">14sp</item>-->
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">28dp</item>
        <!--<item name="android:paddingBottom">4dp</item>-->
        <item name="android:button">@null</item>
    </style>
    <style name="text_style">
        <item name="android:lineSpacingMultiplier">1.0</item>
    </style>

    <!--MineActivity-->
    <style name="table_row_mine" >
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">@dimen/activity_element_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="text_view_mine">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sys_font_size_bolder</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="image_view_mine">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>
</resources>
